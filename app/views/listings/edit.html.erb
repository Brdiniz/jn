<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Conta " +  @account.name, account_path(@account) %></li>
      <li><%= link_to "Vaga #{@job.name}", account_job_path(@account, @job)  %></li>
      <li class="last active"><%= link_to "Alterar Anuncio #{@listing.created_at.to_date}", "#" %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"></h2>
    <div class="inner">
      <% form_for @listing, :url => account_job_listing_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
