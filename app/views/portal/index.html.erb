<table class="table">
  <tbody>
    <tr>
      <th>Vaga</th>
    </tr>
    <% @listings.each do |listing| -%>
    <tr class="<%= cycle("odd", "even") %>">
      <td>
        <div align="center"><b><%= listing.region %>, <%= listing.location %> - <%= listing.created_at.strftime("%d/%m/%Y") %></b></div><br />
        <span><%= listing.job.title %></span>
        <br /><br /><%= listing.job.description.gsub("\r\n", "<br />") %><br /><br /><br/>
        <b>Sal√°rio:</b> <%= listing.job.salary_info %> <br/>
        <b>Empresa:</b> <%= listing.job.company.name %> <br/><br/>
        <%= link_to "Clique aqui para candidatar", job_details_path(listing.id, listing.job.title.gsub(" ", "-")) %><br/><br/>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>