<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to t("activerecord.models.#{model}") + " " +  eval("@#{model}.name"), send("#{model}_path", eval("@#{model}")) %></li>
      <li class="last active"><%= link_to "Alterar " + t("activerecord.models.#{model_item}") + " " + eval("@#{model_item}.id.to_s"), "#" %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"></h2>
    <div class="inner">
      <% form_for "#{model_item}".to_sym, eval("@#{model_item}"), :url => send("#{model}_#{model_item}_path", eval("@#{model}"), eval("@#{model_item}")), :html => { :class => :form, :method => "put"  } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
									
				<div class="group navform wat-cf">
					<button class="button" type="submit">
						<%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
					</button>  
					<%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", send("#{model}_path", eval("@#{model}")), :class => "button" %> 
				</div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'layouts/item_sidebar', :locals => {:model => model, :model_item => model_item }) -%>

