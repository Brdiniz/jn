<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to t("activerecord.models.#{model}") + " " +  eval("@#{model}.name"), send("#{model}_path", eval("@#{model}")) %></li>
      <li class="last active"><%= link_to t("activerecord.models.#{model_item}") + " " + eval("@#{model_item}.name"), "#" %></li>
    </ul>
  </div>
    <div class="content">
      <div class="inner">

        <%= render(:partial => "#{model_item.pluralize}/details_show") %>

        <div class="wat-cf">
          <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", send("edit_#{model}_#{model_item}_path", eval("@#{model}"), eval("@#{model_item}")), :class => "button" %>
          <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", send("#{model}_#{model_item}_path", eval("@#{model}"), eval("@#{model_item}")), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
        </div>

        <p />

        <%= render(:partial => "#{model_item.pluralize}/list_show") %>

      </div>
    </div>
  </div>

<% content_for :sidebar, render(:partial => 'layouts/item_sidebar', :locals => {:model => model, :model_item => model_item }) -%>

