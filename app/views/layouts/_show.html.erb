<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to t("activerecord.models.#{model}") + " " + eval("@#{model}.name"), "#" %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

      <%= render(:partial => "#{model.pluralize}/details_show") %>

      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", send("edit_#{model}_path", eval("@#{model}")), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", send("#{model.pluralize}_path", eval("@#{model}")), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>

      <p />

      <%= render(:partial => "#{model.pluralize}/list_show") %>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'layouts/sidebar', :locals => {:model => model, :menu_visible => true }) -%>

